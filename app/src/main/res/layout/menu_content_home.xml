<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <com.baidu.mapapi.map.MapView
    android:id="@+id/mv_menuContent_map"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true" />
    <LinearLayout
        android:id="@+id/ll_menucontent_startdata"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhitebg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_menuContent_bluetooth"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/open_bluet"
            android:contentDescription="TODO" />
        <TextView
            android:layout_marginStart="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="@string/startreaddata"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_menuContent_location"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/location2"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_above="@+id/ll_menucontent_startdata"
        />
</RelativeLayout>