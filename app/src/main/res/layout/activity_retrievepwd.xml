<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2.5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_retrieve_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@drawable/huge_bg"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.5"
        android:background="@color/colorGray"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_301"
            android:layout_height="@dimen/dp_238"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/text_bg">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/phone_icon" />

                <EditText
                    android:id="@+id/et_retrievepwd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/ll_retrieve_send"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@null"
                    android:hint="@string/bind_phone"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:id="@+id/ll_retrieve_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_24"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text="发送"
                        android:textColor="@color/colorSend" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/password_icon" />

                <EditText
                    android:id="@+id/et_retrievepwd_verifycode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="@null"
                    android:hint="@string/verify_code"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/password_icon" />

                <EditText
                    android:id="@+id/et_retrievepwd_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="@null"
                    android:hint="@string/new_pwd"
                    android:inputType="numberPassword"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/tv_retrievepwd_next"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_gravity="center"
                android:src="@drawable/next_step" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>