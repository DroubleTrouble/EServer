<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        layout="@layout/item_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:weightSum="1"
        android:background="@drawable/form_border"
        >
        <EditText
            android:id="@+id/et_description_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:inputType="textMultiLine"
            android:hint="  请输入说明"
            android:gravity="left|top"
            android:background="@null"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:id="@+id/ll_description_picture"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_88">
            <ImageView
                android:layout_marginStart="@dimen/dp_16"
                android:id="@+id/iv_description_picture1"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88" />
            <ImageView
                android:id="@+id/iv_description_picture2"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88" />
            <ImageView
                android:id="@+id/iv_description_addpicture"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:src="@drawable/add_pic_btn"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_description_commit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape"
        android:text="@string/commit"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorWhite"
        android:layout_height="@dimen/dp_48" />
</LinearLayout>