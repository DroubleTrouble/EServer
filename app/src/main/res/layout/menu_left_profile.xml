<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--上半部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_238"
        android:background="@color/colorDeepBlue"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_16"
            android:layout_height="match_parent"
            android:src="@drawable/left_list"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:text="张晓明"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_profile_department"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="研发部"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_profile_phone"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="1331313313133"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_profile_project"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="项目"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
    <!--下半部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightBlue"
        android:orientation="vertical"
        android:weightSum="4"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_profile_changepwd"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_58"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/change_password"
                android:id="@+id/imageView" />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="@string/change_pwd"
                android:textColor="@color/colorWhite"
                android:layout_alignBottom="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_32" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_profile_task"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_58"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_task"
                android:id="@+id/imageView2" />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="@string/my_task"
                android:textColor="@color/colorWhite"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_32" />
            <TextView
                android:id="@+id/iv_profile_taskUnread"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:text="2"
                android:background="@drawable/unread_bg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_profile_checkin"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_58"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/high_active_bg">
            <ImageView
                android:layout_marginLeft="9dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/location"
                android:id="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" />
            <TextView
                android:id="@+id/tv_profile_check"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_32"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="@string/no_check"
                android:textColor="@color/colorWhite"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" />
        </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBlack"></View>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/ll_profile_setting"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_0"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/setting_icon"
                android:id="@+id/imageView4" />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="@string/setting"
                android:textColor="@color/colorWhite"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_32" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>